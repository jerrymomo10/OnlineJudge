/**
 * Definition for binary tree
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    int maxDepth(TreeNode *root) {
        TreeNode* t=root;
        if(!t)return 0;
        int i=maxDepth(t->left);
        int n=maxDepth(t->right);
        if(i>n)return i+1;
        return n+1;
    }
};
