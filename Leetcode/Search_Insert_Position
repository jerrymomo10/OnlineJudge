class Solution {
public:
    int searchInsert(int A[], int n, int target) {
        if(A==NULL||n==0)return 0;
        int left=0;
        int right=n-1;
        int mid;
        while(left<=right)
        {
           mid=left+(right-left)/2;
           if(target==A[mid])return mid;
           else if(target>A[mid])
           {
               left=mid+1;
           }
           else
           {
               right=mid-1;
           }
        }
        return left;
    }
};
